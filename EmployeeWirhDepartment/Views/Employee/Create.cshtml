@model CreateEmployeeVM
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
        <form asp-action="Create" method="post">
            <div class="form-group mt-2">
                <input class="form-control" asp-for="Name" placeholder="Name" />
            </div>
            <div class="form-group mt-2">
                <input class="form-control" asp-for="Mobile" placeholder="Mobile" />
            </div>

            <div class="form-group mt-2">
                <input class="form-control" asp-for="Email" placeholder="Email" />
            </div>
            
            <div class="form-group mt-2">
                <select class="form-control" asp-items="ViewBag.Departments" asp-for="DepartmentId">
                    <option value="0">Select</option>
                </select>
            </div>
            <br />
            <a href="/Employee/Index" class="btn btn-success">Back to List</a>
            <input type="submit" class="btn btn-primary" value="Create" />
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>